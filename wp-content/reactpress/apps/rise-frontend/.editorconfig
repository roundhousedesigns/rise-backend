# This is the top-most .editorconfig file (do not search in parent directories)
root = true

### All files
[*]
# Force charset utf-8
charset = utf-8
# Indentation
indent_style = tab
indent_size = 2
# line breaks and whitespace
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = single
max_line_length = 100

[*.json]
indent_style = space

[*.md]
indent_style = space
